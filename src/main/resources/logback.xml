<?xml version="1.0" encoding="UTF-8"?>

<configuration debug="TRUE">
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                [%-5level] [%d{HH:mm:ss.SSS}] [%thread] - %msg%n
            </pattern>
        </encoder>
    </appender>
    <root level="DEBUG">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>